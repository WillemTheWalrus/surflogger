html
	head
		title=title
		script(src='/javascripts/jquery-3.3.1.js')
		script(src='/bootstrap-4.1.3-dist/js/bootstrap.min.js')
		link(href='/stylesheets/normalize.css' rel='stylesheet' type='text/css')
		link(href='/fontawesome-free-5.5.0-web/css/all.css' rel='stylesheet')
		link(href='/bootstrap-4.1.3-dist/css/bootstrap.min.css' rel='stylesheet' type='text/css')
		link(href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet')
		link(href='/stylesheets/style.css', rel='stylesheet' type='text/css')
		meta(name='viewport' content='width=device-width, initial-scale=1')

		block links
	
	body
		div#appHeader.container-fluid
			div.row
				h1 Surf Report Buddy
				hr
		
		div#appContent.container-fluid
			
			div.row
			- if(typeof(errors) !== 'undefined') {
				div.alert.alert-danger
					p= errors
			- }

			div.row
			- if(typeof(success) !== 'undefined') {
				div.alert.alert-success
					p= success
			- }

			div.row
			- if(typeof(info) !== 'undefined') {
				div.alert.alert-info
					p= info
			- }
				
		block content

